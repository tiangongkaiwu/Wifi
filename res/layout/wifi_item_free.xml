<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_wifi_free_conning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_huaning"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="切换中..."
        android:textColor="#888888"
        android:textSize="15dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_wifi_free_conned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_conned"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="已连接"
        android:textColor="#017433"
        android:textSize="15dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_wifi_free_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_conn_fail"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="切换失败"
        android:textColor="#ff0000"
        android:textSize="15dip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_wifi_free_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@drawable/ic_single_full" />

    <TextView
        android:id="@+id/tv_wifi_free_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/iv_wifi_free_single"
        android:gravity="center_vertical"
        android:text="TP-Link_1210"
        android:textColor="#017433"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/tv_wifi_free_conn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_wifi_free_single"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="免费"
        android:textColor="#017433"
        android:textSize="15dip"
        android:visibility="visible" />

</RelativeLayout>